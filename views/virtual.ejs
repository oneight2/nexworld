function getDataType(file) {
    const extensionRegex = /(?:\.([^.]+))?$/;
    let getExt = extensionRegex.exec(file)[1].toLowerCase();
    switch (getExt) {
        case 'mp4' || 'wav' || 'mov' || 'avi' || 'wmv' || 'webm' || 'mp2' || 'mpg' || 'mpeg' || 'mpv' || 'mpe' || 'm4p' || 'm4v':
            return 'video';
            break;
        case 'png' || 'jpg' || 'jpeg' || 'gif' || 'tif' || 'tiff' || 'bmp' || 'eps' || 'jfif':
            return 'image';
            break;
        default:
            return 'image';
            break;
    }
}

