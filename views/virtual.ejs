        let dataInfo = data[0].content.type;
        let parsedData = dataInfo.split('/');
        let dataType = parsedData[0];

        let dataFile = data[0].content.filename;
        let annName = data[0].name;
        let dataBoothid = data[0].boothid;
        switch (dataType) {
