                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                email: $('#loginEmail').val(),
                password: $('#loginPassword').val()
            })
        })
        .then(response => response.json())
        .then(data => {
            if (data.error) {
                showRedAlert('#login-alert', data.message);
            } else {
                let content = data.content;
                let userkey = content.userkey;
                let userEmail = content.user;
                let jwt = content.jwt;
                let redirecturl = content.redirecturl;
                localStorage.setItem(userkey + "-user", userEmail);
                localStorage.setItem(userkey + "-jwt", jwt);

                window.location.href(redirecturl);
            }

        })
        .catch(error => {
            showRedAlert('#login-alert', error.message)
        })
}

